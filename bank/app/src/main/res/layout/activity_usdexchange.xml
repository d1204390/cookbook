        android:text="台幣換美金"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="289dp"
        android:layout_height="91dp"
        android:layout_marginTop="80dp"
        android:text="美金換匯"
